extends ../layout/index

block contenido
    section(class="h-screen")
      div(class="h-full ")
        div(class="g-6 flex h-full flex-wrap items-center justify-center lg:justify-between")
            div(class="shrink-1 mb-12 grow-0 basis-auto md:mb-0 md:w-9/12 md:shrink-0 lg:w-6/12 xl:w-6/12")
                img(src="/img/01.png" class="w-full h-3/4" alt="Sample image")
            div(class="mb-12 md:mb-0 md:w-8/12 lg:w-5/12 xl:w-5/12")
                h2(class="text-center font-extrabold text-lg mt-5") Inicio de Sesion
                if errores
                    div(class="max-w-md mx-auto my-10")
                        each error in errores
                            p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
                form(method="POST" action="/auth/login")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div(class="relative mb-6")
                        label(class="block text-sm uppercase text-gray-900 mb-2 font-bold" for="correo") Correo
                        input(class="w-full px-3 py-2 border border-gray-900 rounded-md" type="email" name="correo")
                    div(class="relative mb-6" data-te-input-wrapper-init)
                        label(class="block text-sm uppercase text-gray-900 mb-2 font-bold" for="password") Contraseña
                        input(class="w-full px-3 py-2 border border-gray-900 rounded-md placeholder-gray-400" type="password" name="password")
                    div(class="mb-6 flex items-center justify-between")
                        a(href="/auth/olvide-password") Olvido su contraseña
                    div(class="text-center lg:text-left")
                        input(type="submit" class="inline-block rounded bg-indigo-600 hover:bg-indigo-700 px-7 pb-2.5 pt-3 text-sm font-medium uppercase leading-normal text-white shadow-[0_4px_9px_-4px_#3b71ca] transition duration-150 ease-in-out hover:bg-primary-600 hover:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.3),0_4px_18px_0_rgba(59,113,202,0.2)] focus:bg-primary-600 focus:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.3),0_4px_18px_0_rgba(59,113,202,0.2)] focus:outline-none focus:ring-0 active:bg-primary-700 active:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.3),0_4px_18px_0_rgba(59,113,202,0.2)] dark:shadow-[0_4px_9px_-4px_rgba(59,113,202,0.5)] dark:hover:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.2),0_4px_18px_0_rgba(59,113,202,0.1)] dark:focus:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.2),0_4px_18px_0_rgba(59,113,202,0.1)] dark:active:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.2),0_4px_18px_0_rgba(59,113,202,0.1)]"  data-te-ripple-ini  data-te-ripple-color="light" value="Iniciar Sesion")