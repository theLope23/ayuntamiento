extends ../layout/admin

block contenido
    div(class="mt-8 mx-auto max-w-screen-md")
        div.bg-white.py-8.px-4.shadow
            h1(class="text-center text-2xl font-extrabold")=`Solicitud: ${solicitud.titulo}`
            if errores
                div(class="max-w-md mx-auto my-10")
                    each error in errores
                         p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
            div(class="space-y-5")
                div
                    label(class="block text-sm uppercase text-gray-500 mb-2 font-bold") Tipo de recurso
                    p(class="w-full px-3 py-2 border border-gray-600 rounded-m")= solicitud.tipoRecurso
                div
                    label(class="block text-sm uppercase text-gray-500 mb-2 font-bold") Descripcion
                    p(class="w-full px-3 py-2 rounded-m")!= solicitud.Pedido
                div
                    label(class="block text-sm uppercase text-gray-500 mb-2 font-bold") Solicitud Hecha por
                    p(class="w-full px-3 py-2 border border-gray-600 rounded-m")= solicitud.usuario.nombre +' '+solicitud.usuario.apellido
            form(action=`/admin/solicitud-status/${solicitud.id}`, method="POST" class="space-y-5 mt-5")
                input(type="hidden" name="_csrf" value=csrfToken)
                div
                    h2(class="block text-lg text-center uppercase text-gray-900 mb-2 font-bold") Accion
                div(class="flex justify-center")
                    div(class="mb-[0.125rem] mr-4 inline-block min-h-[1.5rem] pl-[1.5rem]")
                        input(type="radio" checked name="estatus" value="1" class="relative float-left -ml-[1.5rem] mr-1 mt-0.5 h-5 w-5")
                        label(class="mt-px inline-block pl-[0.15rem] hover:cursor-pointer") Aceptar
                    div(class="mb-[0.125rem] mr-4 inline-block min-h-[1.5rem] pl-[1.5rem]")
                        input(type="radio"  name="estatus" value="0" class="relative float-left -ml-[1.5rem] mr-1 mt-0.5 h-5 w-5 ")
                        label(class="mt-px inline-block pl-[0.15rem] hover:cursor-pointer") Rechazar
                div
                    label(class="block text-sm uppercase text-gray-500 mb-2 font-bold") Mensaje (razon por la que acepta o rechaza)*
                    textarea(name="observaciones" rows=10 class="w-full px-3 py-2 border border-gray-600 rounded-md placeholder-gray-400")
                input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit", value="Enviar Respuesta")
block scripts
    script(src="/js/sidebar.js") 


                    
